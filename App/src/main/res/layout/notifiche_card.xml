<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutNotifiche"
    android:padding="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/immagineView"
            android:layout_width="51dp"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:contentDescription="immagine"
            tools:srcCompat="@drawable/notifiche" />

        <TextView
            android:id="@+id/nomeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/immagineView"
            android:text="Asta Terminata"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/astaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomeTxt"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Nome"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/astaTxt"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="15sp"
            android:textStyle="italic" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>